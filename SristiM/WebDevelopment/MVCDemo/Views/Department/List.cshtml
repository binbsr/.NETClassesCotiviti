@using MVCDemo.Models;
@model List<Department>
 <a class="btn btn-success" asp-action="Create">Create New Deparment</a>
<h1>List of Deparment</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      
    </tr>
  </thead>
  <tbody>
     @for (int i = 0; i < Model.Count; i++)

     {
         var emp=Model[i];
          <tr>
        <th scope="row">@i+1</th>
        <th scope="col">ID</th>
        <td>@emp.Id</td>
        <td>@emp.Name</td>
        <td>@emp.Location</td>
       
     
       
        </tr>          
     }     
    
  </tbody>
</table>

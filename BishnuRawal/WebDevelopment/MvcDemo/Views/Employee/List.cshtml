@using MvcDemo.Models;
@model IEnumerable<EmployeeViewModel>

<a class="btn btn-success" asp-action="Create">New Employee</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">@Html.DisplayNameFor(x => x.FirstName)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.LastName)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.DOB)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.DepartmentName)</th>
    </tr>
  </thead>
  <tbody>
    @for(int i = 0; i < Model.Count(); i++)
    {
      var employee = Model.ElementAt(i);
      <partial name="_Row" model=@(new {Employee=employee, Counter=i+1})/>
    }    
  </tbody>
</table>
@model Department
<form asp-action ="Create" method="POST">
  <div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" placeholder="Enter Department Name">
    <span class="text-danger" asp-validation-for="Name"></span>
 </div>
   <div class="form-group">
    <label asp-for="Location"></label>
    <input asp-for="Location" class="form-control" placeholder="Enter Location of Department">
    <span class="text-danger" asp-validation-for="Location"></span>
    </div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
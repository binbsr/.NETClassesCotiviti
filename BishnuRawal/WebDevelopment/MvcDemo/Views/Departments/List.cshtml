@using MvcDemo.Models;
@model List<Department>

<a class="btn btn-success" asp-action="Create">Create New</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
    </tr>
  </thead>
  <tbody>
    @for(int i = 0; i < Model.Count; i++)
    {
      var dep = Model[i];
      <tr>
        <th scope="row">@(i+1)</th>
        <td>@dep.Name</td>
        <td>@dep.Location</td>
      </tr>
    }    
  </tbody>
</table>
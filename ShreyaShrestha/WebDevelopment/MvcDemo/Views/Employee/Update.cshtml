@model Employees;

<form method="POST" asp-controller="Employee" asp-action="Update">
  <div class="form-group">
    <label for="firstName">First Name</label>
    <input type="text" class="form-control" name="FirstName" id="firstName" value = "@Model.FirstName" placeholder="Enter First Name">
   
    <small id="firstName" class="form-text text-muted"></small>
  </div>
 <div class="form-group">
    <label for="lastName">Last Name</label>
    <input type="text" class="form-control" name = "LastName" id="lastName" value = "@Model.LastName" placeholder="Enter Last Name">
   
    <small id="lastName" class="form-text text-muted"></small>
  </div>
  <div class="form-group">
    <label for="dob">DOB</label>
    <input type="date" class="form-control" name="Dob" id="dob" value = '@Model.Dob.ToString("yyyy-MM-dd")' placeholder="Enter your DOB">
   
    <small id="dob" class="form-text text-muted"></small>
  </div>
  <button type="submit" class="btn btn-primary">Insert</button>
</form>